<Window x:Class="Flipkart_search.View.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flipkart_search.View" xmlns:viewmodel="clr-namespace:Flipkart_search.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Cart" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Missing Cart Items?" FontSize="20" FontWeight="SemiBold"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0"/>
            <TextBlock Text="Login to see the items you added previously" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0"/>
            <Button Content="Login" Height="50" Width="250" FontSize="20" FontWeight="SemiBold" Margin="0,25,0,0" Foreground="White" Background="#F67A3C" Command="{Binding OpenLoginCommand}">
            </Button>
        </StackPanel>
    </Grid>
</Window>
