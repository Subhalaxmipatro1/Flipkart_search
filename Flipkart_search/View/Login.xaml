<Window x:Class="Flipkart_search.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flipkart_search.View"
        mc:Ignorable="d"
        Title="Login"
         Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#E8E8E8">
    
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="20,25,0,0" Orientation="Vertical" Height="500" Width="290"  Background="#3B73F7">
            <TextBlock Text="Login" FontSize="22" FontWeight="Bold"  Foreground="White" Margin="25,35,0,0" />
                <TextBlock Text="Get access to your Orders, Wishlist and Recommendations" Foreground="White" FontSize="14" Margin="20,15,0,0" TextWrapping="Wrap"/>
               
            </StackPanel>

            <StackPanel Orientation="Vertical" Height="500" Width="470" Margin="0,25,0,0" Background="white">

                <Grid Margin="15,70,20,0" Height="40" Width="380" >
            <TextBox x:Name="Login_mail"
             TextChanged="Loginmail_TextChanged"
             FontSize="15" 
             Padding="10,5"
             Height="40" Width="380"
             Foreground="Black"
             Background="White"
             BorderBrush="Gray" 
             VerticalAlignment="Center"
             BorderThickness="1"/>

            <TextBlock x:Name="PlaceholderText"
               Text="Enter Email/Mobile number"
               FontSize="15"
               Foreground="Gray"
               Margin="10,5,0,0"
               VerticalAlignment="Center"   
               IsHitTestVisible="False"/>
                </Grid>

                <TextBlock Text="By continuing, you agree to Flipkart's  Terms of Use and Privacy Policy." Foreground="Gray" Margin="30,40,0,0" Visibility="Visible"/>

                <Button x:Name="RequestOtpButton" 
                        Content="Request OTP" 
                        Height="45" Width="400" 
                        Foreground="white" FontWeight="Bold" 
                        Background="#F67A3C" 
                        Margin="0,20,0,0" 
                        Click="OTP_Click"/>

                    <!--<TextBlock Text="New to Flipkart? Create an account" Foreground="Blue" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0"/>-->

                <StackPanel x:Name="OtpPanel" Visibility="Collapsed" Margin="0,15,0,0">
                    <TextBlock Text="Verification Code" 
                               FontSize="14" 
                               Foreground="#3B73F7" 
                               Margin="0,0,0,5" HorizontalAlignment="Center"/>

                    <TextBox x:Name="OtpInput" 
                             Width="200" 
                             Height="40" 
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             FontSize="20"
                             Margin="0,5,0,0" 
                             MaxLength="6"/>

                    <Button x:Name="VerifyOtpButton"
                            Content="Verify OTP" 
                            Click="VerifyOtp_Click" 
                            Width="200" 
                            Height="40" 
                            Margin="0,10,0,0" 
                            Background="#2A55E5" 
                            Foreground="White" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="New to Flipkart? Create an account" 
                           Foreground="#2A55E5" FontSize="13" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Margin="0,30,0,0"
                           Cursor="Hand"/>

            </StackPanel>

          
        </StackPanel>

    </Grid>
</Window>
